<table class="table table-hover table-inverse">
  <tbody>
    <% book.book_comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to user_path(comment.user.id) do %>
          <%= attachment_image_tag comment.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %><br />
          <%= comment.user.name %>
        <% end %>
      </td>
      <td><%= comment.comment %></td>
        <!--コメント投稿ユーザなら表示↓-->
      <% if comment.user == current_user %>
      <td><%= link_to "Destroy", book_book_comment_path(comment.book_id, comment.id), class:'btn btn-danger', method: :delete, remote: true %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>